<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <PublishReadyToRunShowWarnings>true</PublishReadyToRunShowWarnings>
    <TargetFramework>net6.0</TargetFramework>
    <StartupObject>Milva.Program</StartupObject>
    <AssemblyName>milva</AssemblyName>
    <ApplicationIcon>Milva.ico</ApplicationIcon>
    <Version>1.5.0</Version>
    <Authors>Samuel Lucas</Authors>
    <Product>Milva</Product>
    <Description>A simple, cross-platform command line tool for hashing files and text.</Description>
    <Copyright>Copyright Â© 2020-2022 Samuel Lucas</Copyright>
    <PackageProjectUrl>https://github.com/samuel-lucas6/Milva</PackageProjectUrl>
    <RepositoryUrl>https://github.com/samuel-lucas6/Milva</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <AssemblyVersion>1.5.0.0</AssemblyVersion>
    <PackageLicenseExpression>GPLv3</PackageLicenseExpression>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <ErrorReport>none</ErrorReport>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Blake3" Version="0.5.1" />
    <PackageReference Include="libsodium" Version="1.0.18.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="4.0.1" />
    <PackageReference Include="Monocypher" Version="0.3.0" />
    <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="BouncyCastle.Crypto">
      <HintPath>BouncyCastle.Crypto.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
